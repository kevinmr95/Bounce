{
    "version": 2,
    "builds": [
      {
        "src": "backend/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      {
        "src": "/apod",   
        "dest": "/backend/$1"
      },
      {
        "src": "/mars",   
        "dest": "/backend/$1"
      },
      {
        "src": "/epic",   
        "dest": "/backend/$1"
      },
      {
        "src": "/noeWs",   
        "dest": "/backend/$1"
      },
      {
        "src": "/history",   
        "dest": "/backend/$1"
      },
      {
        "src": "/(.*)",    
        "dest": "/frontend/$1"
      }
    ]
  }
